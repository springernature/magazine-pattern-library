<div class="c-card c-card--{{ modifier }} u-flex">
    <div class="c-card__container u-flex">
        <a class="u-flex__container u-flex-direction--row-reverse" href="#">
            {{#if image}}
            <div class="c-card__image-container u-col--palm-4-4 u-col--lap-4-2">
                <div class="u-responsive-ratio">
                    <img srcset="//media.nature.com/w480/magazine-assets/{{ image }} 480w,
                    //media.nature.com/w768/magazine-assets/{{ image }} 768w,
                     //media.nature.com/w400/magazine-assets/{{ image }}"
                        sizes="(max-width: 480px) 480px,
                        (max-width: 1024px) 768px,
                    800px"
                        src="//media.nature.com/w768/magazine-assets/{{ image }}" alt="{{ title }}">
                </div>
            </div>
            {{/if}}
            <div class="c-card__copy u-flex__content u-col--palm-4-4 u-col--lap-4-2">
                <h3 class="c-card__title u-serif u-text17 u-font-weight--regular">{{ title }}</h3>
                {{#if standfirst}}
                <div class="c-card__standfirst u-serif u-text17">
                    {{standfirst}}
                </div>
                {{/if}}
                <div class="c-card__footer">
                    <span class="c-card__article-type sans-serif strong u-sans-serif u-text13 u-upper">{{ articleType
                        }}</span>
                    <span class="c-card__spacer u-sans-serif u-text13"> | </span>
                    <span class="c-card__date u-sans-serif u-text13 u-upper">{{ date }}</span>
                </div>
            </div>
        </a>
    </div>
</div>