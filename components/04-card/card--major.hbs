<div class="c-card c-card--{{ modifier }} u-flex">
    <div class="c-card__container--major">
        <a href="#">
            {{#if image}}
                <div class="c-card__image-container c-card__image-container--major">
                    <div class="u-responsive-ratio">
                        <img srcset="//media.nature.com/w150/magazine-assets/{{ image }} 150w,
                    //media.nature.com/w362/magazine-assets/{{ image }} 362w,
                     //media.nature.com/w260/magazine-assets/{{ image }}"
                             sizes="(max-width: 480px) 150px,
                        (max-width: 1024px) 362px,
                    800px"
                             src="//media.nature.com/w362/magazine-assets/{{ image }}" alt="{{ title }}">
                    </div>
                </div>
            {{/if}}
            <div class="c-card__copy u-flex__content u-col--palm-4-3 u-col--portable-4-4">
                <div class="c-card__body">
                    <h3 class="c-card__title u-serif u-text17 u-font-weight--regular">{{ title }}</h3>
                    {{#if standfirst}}
                        <div class="c-card__standfirst u-sans-serif u-text15 u-hide--palm u-show--portable">
                            {{standfirst}}
                        </div>
                    {{/if}}
                </div>
                <div class="c-card__footer">
                    <span class=" c-card__article-type sans-serif strong u-sans-serif u-text13 u-upper ">{{ articleType
                    }}</span>
                    <span class="c-card__spacer u-sans-serif u-text13 "> | </span>
                    <span class="c-card__date u-sans-serif u-text13 ">{{ date }}</span>
                </div>
            </div>
        </a>
    </div>
</div>