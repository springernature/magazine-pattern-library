<div class="c-card c-card--{{ modifier }} u-flex">
    <div class="c-card__container u-flex u-flex-direction--row-reverse u-full-width">
        <a class="u-flex u-flex--wrap u-flex-direction--row-reverse" href="#">
            {{#if image}}
            <div class="c-card__image-container u-flex u-flex-direction--column u-col--medium-2">
                <div class="u-responsive-ratio">
                    <img src="{{ image }}" />
                </div>
            </div>
            {{/if}}
            <div class="c-card__copy u-flex u-flex-direction--column u-col--medium-2">
                <h3 class="c-card__title u-serif u-text17 u-font-weight--regular">{{ title }}</h3>
                <div class="c-card__footer u-flex u-flex-direction--row">
                    <span class="c-card__article-type sans-serif strong u-sans-serif u-text13 u-upper">{{ articleType }}</span>
                    <span class="c-card__spacer u-sans-serif u-text13"> | </span>
                    <span class="c-card__date u-sans-serif u-text13">{{ date }}</span>
                </div>
            </div>
        </a>
    </div>
</div>